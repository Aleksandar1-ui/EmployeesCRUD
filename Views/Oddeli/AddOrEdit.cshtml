@model Employees.Models.Oddeli
@{
    ViewData["Title"] = "Оддели";
}
<div class="row">
    <div class="col-md-6 offset-md-3">
        <h1>Оддели</h1>
        <form asp-action="AddOrEdit" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OddelId" />
            <div class="form-group">
                <label asp-for="ImeOddel" class="control-label"></label>
                <input asp-for="ImeOddel" class="form-control" />
                <span asp-validation-for="ImeOddel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BrojVraboteni" class="control-label"></label>
                <input asp-for="BrojVraboteni" class="form-control" />
                <span asp-validation-for="BrojVraboteni" class="text-danger"></span>
            </div>

            <div class="row mt-2">
                <div class="col-md-6">
                    <div class="form-group">
                        <input type="submit" value="Внеси" class="btn btn-primary w-100" />
                    </div>
                </div>
                <div class="col-md-6">
                    <a asp-action="Index" class="btn btn-secondary  w-100">Преглед</a>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}